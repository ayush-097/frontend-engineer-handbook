{
  "id": "html-css-fundamentals",
  "viewports": [
    {
      "label": "phone",
      "width": 375,
      "height": 667
    },
    {
      "label": "tablet",
      "width": 768,
      "height": 1024
    },
    {
      "label": "desktop",
      "width": 1920,
      "height": 1080
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Responsive Navbar - Desktop",
      "url": "../../lab/responsive-navbar/index.html",
      "selectors": [".navbar"],
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "Responsive Navbar - Mobile",
      "url": "../../lab/responsive-navbar/index.html",
      "selectors": [".navbar"],
      "delay": 500,
      "misMatchThreshold": 0.1,
      "viewportLabel": "phone"
    },
    {
      "label": "Card Layout System",
      "url": "../../lab/card-layout-system/index.html",
      "selectors": [".card-grid"],
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "Card Hover State",
      "url": "../../lab/card-layout-system/index.html",
      "selectors": [".card"],
      "hoverSelector": ".card:first-child",
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "Form Validation - Normal",
      "url": "../../lab/form-validation-ui/index.html",
      "selectors": [".form"],
      "delay": 500,
      "misMatchThreshold": 0.1
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
